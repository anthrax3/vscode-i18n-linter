{
  "name": "vscode-react-i18n",
  "displayName": "React I18N",
  "description": "A VSCode extension to identify and extract string literals in React components",
  "version": "0.1.0",
  "publisher": "jasonslyvia",
  "engines": {
    "vscode": "^1.18.0"
  },
  "categories": [
    "Other",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Toggle vscode-react-i18n",
      "properties": {
        "vscode-react-i18n.markChineseCharacters": {
          "type": "boolean",
          "default": true,
          "description": "Mark Chinese characters in editor so you can quickly spot on them"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "vscode-react-i18n.extractI18N",
          "group": "1_modification"
        }
      ]
    }
  },
  "keywords": [
    "React",
    "i18n"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "globby": "^7.1.1",
    "lodash": "^4.17.4"
  }
}
